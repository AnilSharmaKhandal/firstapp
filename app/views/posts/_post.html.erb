<li id="post-<%= post.id %>">
   
  <span class="user"><%= link_to post.user.email, post.user %></span><br>
  <span class="content"><%= post.content %></span><br>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
</span>

    
      <%= link_to "delete", post, method: :delete, data: { confirm: "Are You sure for delete?" } %>
     
  
</li>
